{
  "appenders": {
    "app:console": {
      "type": "stdout",
      "layout": {
        "type": "pattern",
        "pattern": "%[[%p] -%] %m"
      }
    },
    "app": {
      "type": "file",
      "filename": "log/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss:SSS}] [%p] %f{1}:%l - %m"
      }
    },
    "debug": {
      "type": "file",
      "filename": "log/debug.log",
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss:SSS}] [%p] %f{1}:%l - %m"
      }
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "app",
        "app:console"
      ],
      "level": "INFO",
      "enableCallStack": true
    },
    "debug": {
      "appenders": [
        "debug"
      ],
      "level": "TRACE",
      "enableCallStack": true
    }
  }
}